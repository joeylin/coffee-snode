extends ../common/_admin-layout
block meta
    link(rel="stylesheet", type="text/css", href="/css/admin.css")
    include ../common/_kindeditor
block navbar
    include ../common/_admin-navbar
block content
    .row-fluid
        .span2
            // nav active
            editClass = 'yes'
            include ../common/_admin-sidebar-nav
        .span10
            .row-fluid
                .box.span12
                    .box-header.well
                        h2
                            i.icon-edit
                            |Blog
                    .box-content
                        form(action="/admin/blog/edit", method="post")
                            fieldset
                                legend 撰写博文
                                .control-group
                                    label.control-label 标题
                                    .controls
                                        input.input-block-level(type="text", name="blog[title]")
                                .control-group
                                    label 内容
                                    div.controls
                                        textarea#editor(name="blog[content]") 
                                .form-actions
                                    button.btn.btn-primary.pull-right(type="submit") 发表
                                    button.btn.pull-right(type="reset") 取消

block footer
    include ../common/_footer
